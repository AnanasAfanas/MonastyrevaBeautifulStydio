<Page x:Class="MonastyrevaBeautifulStydio.View.Pages.AddSotrudnikPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MonastyrevaBeautifulStydio.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddSotrudnikPage">

    <Grid>
        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <TextBlock Text="Введите имя производителя"/>
            <TextBox x:Name="NameSotrudnikTb" Margin="0 10"/>
            <Button x:Name="AddSotrudnikBtn" Content="Добавить"
                    Click="AddSotrudnikBtn_Click"/>
        </StackPanel>
    </Grid>
</Page>
