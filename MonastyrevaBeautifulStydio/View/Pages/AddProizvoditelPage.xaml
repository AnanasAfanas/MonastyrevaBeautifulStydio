<Page x:Class="MonastyrevaBeautifulStydio.View.Pages.AddProizvoditelPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MonastyrevaBeautifulStydio.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddProizvoditelPage">

    <Grid>
        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Width="300" >
            <TextBlock Margin="0 10 " Text="Введите проиводителя"/>
            <TextBox Margin="0 10 " x:Name="NameProizvoditelTb"/>
            <Button Margin="0 10 " Content="Дпобавить"
                    x:Name="AddProizvoditelBtn"
                    Click="AddProizvoditelBtn_Click"/>
        </StackPanel>
    </Grid>
</Page>
